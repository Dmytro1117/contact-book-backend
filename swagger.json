  "components": {
    "schemas": {
      "Registration": {
        "type": "object",
        "required": ["name", "email", "password"],
        "properties": {
          "name": {
            "type": "string",
            "example": "Bob Jonson"
          },
          "email": {
            "type": "string",
            "example": "gmetum@sci.net"
          },
          "password": {
            "type": "string",
            "minLength": 10,
            "example": 1234567890
          }
        }
      },
      "Contact": {
        "type": "object",
        "required": ["name", "email", "phone"],
        "properties": {
          "_id": {
            "type": "string",
            "example": "651db689e2e663b6128bf7b3"
          },
          "name": {
            "type": "string",
            "example": "Bob Jonson"
          },
          "email": {
            "type": "string",
            "example": "gmetum@sci.net"
          },
          "phone": {
            "type": "string",
            "example": "(666) 555-6666"
          },
          "favorite": {
            "type": "boolean",
            "example": false
          }
        }
      },
      "Contacts": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Contact"
        }
      },
      "Unauthorized": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Not authorized"
          }
        }
      },
      "InternalServerError": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "invalid token"
          }
        }
      },
      "NotFound": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Sorry, contact not found"
          }
        }
      },
      "Conflict": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Sorry, user with email in use"
          }
        }
      },
      "BadRequest": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Sorry, is not valid id."
          }
        }
